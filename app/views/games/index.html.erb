<div class="banner mt-5" style="background-image: url(<%= image_path 'banner.png' %>);">
  <div class="container">
    <p>"A PELADA É A MATRIZ DO FUTEBOL" - CHICO BUARQUE</p>
    <% if user_signed_in? %>
      <h1>BEM VINDO, </h1>
      <h1><%= current_user.name %></h1>
    <% else %>
      <h1>ENCONTRE SUA PELADA</h1>
    <% end %>
  </div>
</div>
<div class="container pt-3 ">
  <div class="row">
    <div class="col-12 col-lg-4 my-games px-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= image_tag "squared-white-whistle.png", id:"whistle-icon" %>
        <h1 class="mb-0">Minhas peladas</h1>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="scoreboard created">
          <h2> Criadas </h2>
          <p> <%= @created_display %> </p>
        </div>

        <div class="scoreboard">
          <h2 style="opacity: 0;">.</h2>
          <p>|</p>
        </div>

        <div class="scoreboard enrolled">
          <h2> Participa </h2>
          <p> <%= @enrolled_display %> </p>
        </div>
      </div>

      <% if @user_games.size > 0 %>
        <div class="mt-3 mb-3">
        <%= link_to "Criar pelada", new_game_path, style: "padding: 10px; border: 2px solid rgba(255, 255, 255, 0.6); text-decoration:none; color: white; font-family: 'Soccer League', sans-serif; font-size: 25pt; opacity: 1" %>
        </div>
        <div class="my-games-cards">
          <% @user_games.each do |game| %>
            <%= link_to game_path(game), style: "text-decoration: none" do  %>
                <div class="card-game index-card-game">
                  <div class="card-game-infos">
                    <div>
                    <h2><%= "#{game.address} | #{l game.date, format: :long} | #{l game.time, format: :default}"  %></h2>
                    </div>
                  </div>
                    <%= image_tag "bg_db/futebol_backimage#{rand(1..33)}.jpg", alt:"Imagem Peladas" %>
                  </div>
                  <%= link_to 'Editar', edit_game_path(game), style: "color: white; text-decoration: none;" %>
            <% end %>
          <% end %>
        </div>
        <% if @user_games.size == 3 %>
          <%= link_to "Ver todas as peladas", my_games_path, style: "text-decoration:none; color: white; font-family: 'Soccer League', sans-serif; font-size: 25pt; opacity: 0.6" %>
        <% end %>
      <% else  %>
        <div>
          <p>Você ainda não</p>
          <p>possui nehuma</p>
          <p>pelada</p>
        </div>
        <div class="mt-3">
          <%= link_to "Criar pelada", new_game_path, style: "padding: 10px; border: 2px solid rgba(255, 255, 255, 0.6); text-decoration:none; color: white; font-family: 'Soccer League', sans-serif; font-size: 25pt; opacity: 1" %>
        </div>
      <% end %>

    </div>
    <div class="col-12 col-lg-8">
        <div class="all-games">
          <h1>Todas as peladas</h1>
          <div class="all-games-cards" >
              <% @games.each do |game| %>
                <%= link_to game_path(game), style: "text-decoration: none" do  %>
                    <div class="card-game index-card-game">
                      <div class="card-game-infos">
                        <div>
                        <h2><%= "#{game.address} | #{l game.date, format: :long} | #{l game.time, format: :default}"  %></h2>
                        </div>
                      </div>
                      <%= image_tag "bg_db/futebol_backimage#{rand(1..33)}.jpg", alt:"Imagem Peladas" %>
                    </div>
                <% end %>
              <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
 <hr>
