<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'banner.png' %>);">
  <div class="container">
    <p>"A PELADA É A MATRIZ DO FUTEBOL" - CHICO BUARQUE</p>
    <% if user_signed_in? %>
      <h1>BEM VINDO, </h1>
      <h1><%= current_user.name %></h1>
    <% else %>
      <h1>ENCONTRE SUA PELADA</h1>
    <% end %>
  </div>
</div>
<div class="container pt-3 ">
  <div class="row">
    <div class="col-12 col-lg-4 my-games px-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= image_tag "whistle.png", id:"whistle-icon" %>
        <h1>Minhas peladas</h1>
      </div>
      <% if @user_games.size > 0 %>
        <div class="my-games-cards">
          <% @user_games.each do |game| %>
            <%= link_to game_path(game), style: "text-decoration: none" do  %>
                <div class="card-game">
                  <div class="card-game-infos">
                    <div>
                    <h2><%= "#{game.neighborhood} | #{l game.date, format: :long} | #{l game.time, format: :default}"  %></h2>
                    </div>
                  </div>
                  <%= image_tag "game_card_bg.jpg", alt: "Ipanema" %>
                </div>
            <% end %>
          <% end %>
        </div>
      <% else  %>
        <div>
          <p>Você ainda não</p>
          <p>possui nehuma</p>
          <p>pelada</p>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "Criar pelada", new_game_path, style: "text-decoration:none; color: white; font-family: 'Soccer League', sans-serif; font-size: 25pt; opacity: 0.6" %>
      </div>
    </div>
    <div class="col-12 col-lg-8">
        <div class="all-games">
          <h1>Todas as peladas</h1>
          <div class="all-games-cards" >
              <% @games.each do |game| %>
                <%= link_to game_path(game), style: "text-decoration: none" do  %>
                    <div class="card-game">
                      <div class="card-game-infos">
                        <div>
                        <h2><%= "#{game.neighborhood} | #{l game.date, format: :long} | #{l game.time, format: :default}"  %></h2>
                        </div>
                      </div>
                      <%= image_tag "game_card_bg.jpg", alt: "Ipanema" %>
                    </div>
                <% end %>
              <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
 <hr>
